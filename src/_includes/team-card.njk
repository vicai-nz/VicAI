<div class="card team-card" data-aos="fade-up">
  <div class="team-card__photo">
    <span class="team-card__initials" aria-hidden="true">{{ member.initials }}</span>
  </div>
  <h3 class="team-card__name">{{ member.name }}</h3>
  <span class="tag tag--accent">{{ member.role }}</span>
  <p class="team-card__bio">{{ member.bio }}</p>
  <div class="team-card__links">
    <a href="{{ member.linkedin }}" aria-label="LinkedIn profile for {{ member.name }}" target="_blank" rel="noopener">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
    </a>
    <a href="{{ member.email }}" aria-label="Email {{ member.name }}">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
    </a>
  </div>
</div>
